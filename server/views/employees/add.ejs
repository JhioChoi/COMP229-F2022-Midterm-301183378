<%- include ../partials/header.ejs %> 

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="employeenameTextField">Employee Name</label>
          <input
            type="text"
            class="form-control"
            id="employeenameTextField"
            placeholder="Enter the Employee Name:"
            name="employeename"
            required
          />
        </div>

        <div class="from-group">
          <label for="employeeidTextField">Employee Id</label>
          <input
            type="text"
            class="form-control"
            id="employeeidTextField"
            placeholder="Enter the Employee's id:"
            name="employeeid"
            required
          />
        </div>

        <div class="from-group">
          <label for="departmentTextField">Department</label>
          <input
            type="text"
            class="form-control"
            id="departmentTextField"
            placeholder="Enter the Department:"
            name="department"
            required
          />
        </div>

        <div class="from-group">
          <label for="designationTextField">Designation</label>
          <textarea
            type="text"
            class="form-control"
            id="designationTextField"
            placeholder="Enter the Designation:"
            name="designation"
            required
          ></textarea>
        </div>

        <div class="from-group">
          <label for="salaryTextField">Salary</label>
          <input
            type="number"
            class="form-control"
            id="salaryTextField"
            placeholder="Enter the Salary:"
            name="salary"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fa fa-check" aria-hidden="true"></i> Submit
        </button>

        <a href="/employees" class="btn btn-warning">
          <i class="fa fa-ban" aria-hidden="true"></i> Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/footer.ejs %>
